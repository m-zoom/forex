modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libxcrypt", "pkg-config", "qhull", "tcl", "tk", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Forex Pattern Recognition App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "forex_pattern_app"

[[workflows.workflow]]
name = "Forex Pattern Recognition App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install pandas numpy matplotlib mplfinance requests scipy scikit-learn tensorflow && python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "forex_pattern_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /tmp && pip install pandas numpy matplotlib mplfinance requests scipy scikit-learn tensorflow && python main.py"

[deployment]
run = ["sh", "-c", "pip install pandas numpy matplotlib mplfinance requests scipy scikit-learn tensorflow && python main.py"]
